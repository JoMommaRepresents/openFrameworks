<Page
    x:Class="opencv.DirectXPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:opencv"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

  <SwapChainPanel x:Name="swapChainPanel">
        <StackPanel Orientation = "Horizontal" VerticalAlignment="Bottom" Margin="60" HorizontalAlignment="Center">
            <Button x:Name="Preview" Content="Preview"  Click="Preview_Click" />
            <Button x:Name="GrayScale" Content="Gray Scale"  Click="GrayScale_Click" />
            <Button x:Name="Sepia" Content="Sepia"  Click="Sepia_Click" />
            <Button x:Name="Canny" Content="Canny"  Click="Canny_Click" />
            <Button x:Name="Blur" Content="Blur"  Click="Blur_Click" />
            <Button x:Name="Features" Content="Features"  Click="Features_Click" />
        </StackPanel>
  </SwapChainPanel>

